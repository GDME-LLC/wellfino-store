<section class="wf-section">
  <div class="wf-wrap">
    <div class="wf-section__head">
      <h1 class="wf-section__title wf-page-title">Curated Supplement Stacks</h1>
    </div>
    <p class="wf-page-intro">Purpose-built combinations designed for real results.</p>

    <div class="wf-grid wf-stacks-grid">
      {% assign stack_1_handle = 'core-daily-complete-system-stack' %}
      {% assign stack_1_product = all_products[stack_1_handle] %}
      {% if stack_1_product == blank %}
        {% assign stack_1_handle = 'core-daily-complete-system' %}
        {% assign stack_1_product = all_products[stack_1_handle] %}
      {% endif %}
      <a class="wf-tile wf-stack-card" href="/products/{{ stack_1_handle }}">
        <div class="wf-stack-card__media">
          {% render 'wf-stack-collage', product_object: stack_1_product, class_name: 'wf-stack-collage--card', image_width: 900, layout_key: 'core-daily-complete-system' %}
        </div>
        <div class="wf-stack-card__pill">10% savings</div>
        <h3>Core Daily Complete System Stack</h3>
        <p>Comprehensive daily foundation with your selected multivitamin option.</p>
        <div class="wf-stack-card__price-row">
          {% if stack_1_product != blank and stack_1_product.price > 0 %}
            <span class="wf-stack-card__price">From {{ stack_1_product.price | money }}</span>
          {% else %}
            <span class="wf-stack-card__price wf-stack-card__price--muted">Stack savings applied at checkout</span>
          {% endif %}
        </div>
        <span class="wf-btn wf-btn--primary wf-stack-card__cta">Shop Stack</span>
      </a>

      {% assign stack_2_handle = 'core-essentials-stack' %}
      {% assign stack_2_product = all_products[stack_2_handle] %}
      {% if stack_2_product == blank %}
        {% assign stack_2_handle = 'core-essentials' %}
        {% assign stack_2_product = all_products[stack_2_handle] %}
      {% endif %}
      <a class="wf-tile wf-stack-card" href="/products/{{ stack_2_handle }}">
        <div class="wf-stack-card__media">
          {% render 'wf-stack-collage', product_object: stack_2_product, class_name: 'wf-stack-collage--card', image_width: 900 %}
        </div>
        <div class="wf-stack-card__pill">10% savings</div>
        <h3>Core Essentials Stack</h3>
        <p>Straightforward essentials designed to keep everyday nutrition consistent.</p>
        <div class="wf-stack-card__price-row">
          {% if stack_2_product != blank and stack_2_product.price > 0 %}
            <span class="wf-stack-card__price">From {{ stack_2_product.price | money }}</span>
          {% else %}
            <span class="wf-stack-card__price wf-stack-card__price--muted">Stack savings applied at checkout</span>
          {% endif %}
        </div>
        <span class="wf-btn wf-btn--primary wf-stack-card__cta">Shop Stack</span>
      </a>

      {% assign stack_3_handle = 'focus-cognition-stack' %}
      {% assign stack_3_product = all_products[stack_3_handle] %}
      <a class="wf-tile wf-stack-card" href="/products/{{ stack_3_handle }}">
        <div class="wf-stack-card__media">
          {% render 'wf-stack-collage', product_object: stack_3_product, class_name: 'wf-stack-collage--card', image_width: 900 %}
        </div>
        <div class="wf-stack-card__pill">10% savings</div>
        <h3>Focus &amp; Cognition Stack</h3>
        <p>Targeted support for clarity, concentration, and cognitive output.</p>
        <div class="wf-stack-card__price-row">
          {% if stack_3_product != blank and stack_3_product.price > 0 %}
            <span class="wf-stack-card__price">From {{ stack_3_product.price | money }}</span>
          {% else %}
            <span class="wf-stack-card__price wf-stack-card__price--muted">Stack savings applied at checkout</span>
          {% endif %}
        </div>
        <span class="wf-btn wf-btn--primary wf-stack-card__cta">Shop Stack</span>
      </a>
    </div>
  </div>
</section>

{{ 'wf-stack-collage.js' | asset_url | script_tag }}

