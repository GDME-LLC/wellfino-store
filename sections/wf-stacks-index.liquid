      {% assign stack_1_handle = 'mens-core-essentials-stack' %}
      {% assign stack_1_product = all_products[stack_1_handle] %}
      {% if stack_1_product == blank %}
        {% assign stack_1_handle = 'mens-core-essentials' %}
        {% assign stack_1_product = all_products[stack_1_handle] %}
      {% endif %}
      <a class="wf-tile wf-stack-card" href="/products/{{ stack_1_handle }}">
