
<section class="wf-hero">
  <div class="wf-wrap">
    <div class="wf-hero__card">
      <div class="wf-hero__kicker">{{ section.settings.kicker }}</div>
      <h1>{{ section.settings.heading }}</h1>
      <p>{{ section.settings.subheading }}</p>

      <div class="wf-hero__cta">
        <a class="wf-btn wf-btn--primary" href="{{ section.settings.primary_url }}">{{ section.settings.primary_label }} â†’</a>
        <a class="wf-btn" href="{{ section.settings.secondary_url }}">{{ section.settings.secondary_label }}</a>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "WF Hero",
  "settings": [
    { "type": "text", "id": "kicker", "label": "Kicker", "default": "Science-backed. Clean. Simple." },
    { "type": "text", "id": "heading", "label": "Heading", "default": "Wellness, refined." },
    { "type": "textarea", "id": "subheading", "label": "Subheading", "default": "Curated formulas that work, in doses that matter, with ingredients you can trust." },
    { "type": "text", "id": "primary_label", "label": "Primary button label", "default": "Start shopping" },
    { "type": "url", "id": "primary_url", "label": "Primary button link" },
    { "type": "text", "id": "secondary_label", "label": "Secondary button label", "default": "Browse categories" },
    { "type": "url", "id": "secondary_url", "label": "Secondary button link" }
  ],
  "presets": [{ "name": "WF Hero" }]
}
{% endschema %}
