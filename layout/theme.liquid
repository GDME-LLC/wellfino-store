<!doctype html>
<html lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>{{ page_title }}{% unless page_title contains shop.name %} â€” {{ shop.name }}{% endunless %}</title>
  {{ content_for_header }}
  <style>
    :root{
      --wf-bg: {{ settings.wf_bg }};
      --wf-panel: {{ settings.wf_panel }};
      --wf-text: {{ settings.wf_text }};
      --wf-muted: {{ settings.wf_muted }};
      --wf-border: {{ settings.wf_border }};
      --wf-accent: {{ settings.wf_accent }};
      --wf-radius: {{ settings.wf_radius }}px;
    }
    .wf-hero .wf-hero__card,
    .wf-hero .wf-hero__card.wf-hero__card--has-bg{
      background-image:
        linear-gradient(105deg, rgba(16,12,9,.56) 0%, rgba(28,20,14,.42) 45%, rgba(38,28,20,.28) 100%),
        url('{{ 'wellness-refined.png' | asset_url }}') !important;
      background-size: cover !important;
      background-position: center center !important;
      background-repeat: no-repeat !important;
    }
    .wf-hero .wf-hero__card::after{display:none !important;}
    .wf-hero .wf-hero__kicker,
    .wf-hero [class*="kicker"],
    .wf-hero [id*="kicker"],
    .wf-hero hr,
    .wf-hero [role="separator"]{
      display:none !important;
      content:none !important;
    }
  </style>
  {{ 'wf.css' | asset_url | stylesheet_tag }}
</head>
<body>
  {% section 'header' %}
  <main id="MainContent">{{ content_for_layout }}</main>
  <script>
    (function() {
      function removeHeroBars() {
        var hero = document.querySelector('.wf-hero');
        if (!hero) return;
        hero.querySelectorAll('.wf-hero__kicker, [class*=\"kicker\"], [id*=\"kicker\"], hr, [role=\"separator\"]').forEach(function(el) {
          el.remove();
        });
      }
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', removeHeroBars);
      } else {
        removeHeroBars();
      }
      var observer = new MutationObserver(removeHeroBars);
      observer.observe(document.documentElement, { childList: true, subtree: true });
      setTimeout(function() { observer.disconnect(); }, 30000);
    })();
  </script>
  {% section 'footer' %}
</body>
</html>
