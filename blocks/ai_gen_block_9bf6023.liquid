{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-category-nav-{{ ai_gen_id }} {
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    padding: {{ block.settings.section_padding }}px 0;
    display: block;
  }

  .ai-category-nav__container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-category-nav__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.heading_spacing }}px 0;
    text-align: {{ block.settings.heading_alignment }};
  }

  .ai-category-nav__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.gap }}px;
  }

  .ai-category-nav__card-{{ ai_gen_id }} {
    position: relative;
    border-radius: {{ block.settings.card_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    text-decoration: none;
    display: flex;
    flex-direction: column;
    align-items: {{ block.settings.card_alignment }};
    justify-content: center;
    min-height: {{ block.settings.card_height }}px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    overflow: hidden;
  }

  .ai-category-nav__card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
  }

  .ai-category-nav__swatch-{{ ai_gen_id }} {
    width: {{ block.settings.swatch_size }}px;
    height: {{ block.settings.swatch_size }}px;
    border-radius: 50%;
    margin-bottom: 12px;
    border: 3px solid rgba(255, 255, 255, 0.3);
  }

  .ai-category-nav__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    color: #ffffff;
    margin: 0 0 8px 0;
    text-align: {{ block.settings.card_alignment }};
  }

  .ai-category-nav__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: rgba(255, 255, 255, 0.9);
    margin: 0;
    text-align: {{ block.settings.card_alignment }};
  }

  @media screen and (max-width: 989px) {
    .ai-category-nav__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-category-nav__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }

    .ai-category-nav__heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }

    .ai-category-nav__card-{{ ai_gen_id }} {
      min-height: calc({{ block.settings.card_height }}px * 0.8);
      padding: calc({{ block.settings.card_padding }}px * 0.8);
    }
  }
{% endstyle %}

